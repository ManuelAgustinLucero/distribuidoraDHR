{% extends 'base.html.twig' %}

{% block body %}


    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 col-md-7 col-lg-offset-2">
                    <div class="card">
                        <div class="header">
                            <h4 class="title text-center">Editar Producto</h4>
                            {% for flash_message in app.session.flashbag.get('notice') %}
                                <div class="flash-notice text-danger text-center ">
                                    <h4>{{ flash_message }}</h4>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="content">
                            {{ form_start(edit_form) }}
                            <div class="row">
                                <div class="col-md-6" >
                                    <div class="form-group" >
                                        <label>Descripcion</label>
                                        {{ form_widget(edit_form.descripcion, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>

                                <div class="col-md-6" >
                                    <div class="form-group">
                                        <label class="text-center">Precio</label>
                                        {{ form_widget(edit_form.precio, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>
                            </div>




                            <div class="text-center">
                                <a  class="btn btn-info btn-fill btn-wd"  href="{{ path('admin_producto_index') }}">Volver a la lista</a>

                                <input class="btn btn-success btn-fill btn-wd" type="submit" value="Crear" />
                            </div>
                            <div class="clearfix"></div>
                            {{ form_end(edit_form) }}
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
{% endblock %}
